<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="1">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="vertical">

        <TextView
                android:text="@string/label_select"
                android:textSize="15sp"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_select"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

            <Spinner
                    android:id="@+id/spinner_bike"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/ThemeOverlay.AppCompat.Light"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:weightSum="1"
                android:layout_marginBottom="26dp">
            <Button
                    android:text="@string/btn_edit_bike"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="wrap_content" android:id="@+id/btn_edit_bike"/>
            <Button
                    android:text="@string/btn_add_new_bike"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="wrap_content" android:id="@+id/btn_add_new_bike"/>
        </LinearLayout>
        <Button
                android:text="@string/btn_start_ride"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@color/colorPrimaryLight" android:id="@+id/btn_start_ride"/>

    </LinearLayout>

    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
    >
        <include layout="@layout/bike_information"/>
    </FrameLayout>
</LinearLayout>