<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:text="@string/app_name"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginBottom="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            style="?android:attr/buttonBarButtonStyle"
            android:weightSum="1"
    >
        <Button
                android:text="@string/btn_new_ride"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryLight"
                android:id="@+id/btn_new_ride"/>

        <Button
                android:text="@string/btn_history_ride"
                android:layout_width="300dp"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@color/colorPrimaryLight"
                android:layout_height="wrap_content" android:id="@+id/btn_history_ride"/>


    </LinearLayout>


    <ImageView
            android:layout_width="210dp"
            tools:ignore="ContentDescription"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="-2dp"
            app:srcCompat="@mipmap/bikelogo" android:id="@+id/imageView"/>

</LinearLayout>